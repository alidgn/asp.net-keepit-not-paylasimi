@using KeepIT.Entities.ValueObjects
@model RegisterViewModel
@{
    Layout = "~/Views/Shared/_FooterFixedLayout.cshtml";
    ViewBag.Title = "Register";
}

@using (Html.BeginForm())
{

    <div class="container">
        <div class="card card-container">
            <!-- <img class="profile-img-card" src="//lh3.googleusercontent.com/-6V8xOA6M7BA/AAAAAAAAAAI/AAAAAAAAAAA/rzlHcD0KYwo/photo.jpg?sz=120" alt="" /> -->
            <img id="profile-img" class="profile-img-card" src="//ssl.gstatic.com/accounts/ui/avatar_2x.png" />
            <p id="profile-name" class="profile-name-card">Kayıt Ol</p>

            @Html.ValidationSummary(false)

            <div class="form-signin">
                <span id="reauth-email" class="reauth-email"></span>

                @Html.TextBoxFor(model => model.Username, new { @class = "form-control", id = "inputUsername", placeholder = "Kullanıcı adı", type = "text" })
                @Html.TextBoxFor(model => model.Email, new { @class = "form-control", id = "inputEmail", placeholder = "E-posta adresi", type = "email" })
                @Html.TextBoxFor(model => model.Password, new { @class = "form-control", id = "inputPassword", placeholder = "Şifre", type = "password" })
                @Html.TextBoxFor(model => model.RePassword, new { @class = "form-control", id = "inputPassword", placeholder = "Şifre Tekrar", type = "password" })

                @*<div id="remember" class="checkbox">
                        <label>
                            <input type="checkbox" value="remember-me"> Beni Hatırla
                        </label>
                    </div>*@
                <button class="btn btn-lg btn-primary btn-block btn-signin" type="submit">Üye Ol</button>
            </div><!-- /form -->
            <a href="/Home/Login" class="forgot-password text-center">
                Zaten Üyeyim.
            </a>
        </div><!-- /card-container -->
    </div><!-- /container -->

}