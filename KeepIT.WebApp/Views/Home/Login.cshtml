@using KeepIT.Entities.ValueObjects
@model LoginViewModel
@{
    Layout = "~/Views/Shared/_FooterFixedLayout.cshtml";
    ViewBag.Title = "Giriş";
}

@using (Html.BeginForm())
{
    <div class="container">
        <div class="card card-container">
            <!-- <img class="profile-img-card" src="//lh3.googleusercontent.com/-6V8xOA6M7BA/AAAAAAAAAAI/AAAAAAAAAAA/rzlHcD0KYwo/photo.jpg?sz=120" alt="" /> -->
            <img id="profile-img" class="profile-img-card" src="//ssl.gstatic.com/accounts/ui/avatar_2x.png" />
            <p id="profile-name" class="profile-name-card">Giriş Yap</p>

            @Html.ValidationSummary(false)

            <div class="form-signin">
                <span id="reauth-email" class="reauth-email"></span>

                @Html.TextBoxFor(model => model.Username, new { @class = "form-control", id = "inputEmail", placeholder = "Kullanıcı adı veya E-posta", type = "text" })
                @Html.TextBoxFor(model => model.Password, new { @class = "form-control", id = "inputPassword", placeholder = "Şifre", type = "password" })

                <button class="btn btn-lg btn-primary btn-block btn-signin" type="submit">Giriş</button>
            </div><!-- /form -->
            <a href="/Home/ForgetPassword" class="forgot-password text-center">
                Şifremi unuttum.
            </a>
            <a href="/Home/Register" class="forgot-password btn btn-outline-light text-center">
                Bir Hesap Oluştur
            </a>
        </div><!-- /card-container -->
    </div><!-- /container -->
}